---
import { SEO } from "astro-seo";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = "Pragyantra.in - Healthcare Technology & AI Innovation",
  description = "Exploring the intersection of AI, ML, and neuroscience in healthcare technology",
  image = "/social-image.jpg",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta name="google-adsense-account" content="ca-pub-9496502750898739">
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-0DD51DTHV6"
    >
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-0DD51DTHV6");
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pragyantra-Blog</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title,
          type: "website",
          image,
        },
      }}
      twitter={{
        creator: "@pragyantra",
        card: "summary_large_image",
      }}
    />
    
    <!-- Essential Meta Tags -->
    <meta name="keywords" content="Tech Blog, AI, Robotics, Innovation, Pragyantra, IIT Madras, Coding">
    <meta name="author" content="Pragyantra Blog Team">
    <meta name="robots" content="index, follow">
    
    <!-- Open Graph (For Facebook & LinkedIn) -->
    <meta property="og:title" content="{title}">
    <meta property="og:description" content="{description}">
    <meta property="og:image" content="https://www.pragyantra.in/blog-cover.jpg">
    <meta property="og:url" content="https://www.pragyantra.in/blog">
    <meta property="og:type" content="article">
    
    <!-- Twitter Card (For Twitter Sharing) -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{title}">
    <meta name="twitter:description" content="{description}">
    <meta name="twitter:image" content="https://www.pragyantra.in/blog-cover.jpg">
    <meta name="twitter:site" content="@pragyantra">
    
    <!-- Canonical URL -->
    <link rel="canonical" href="https://www.pragyantra.in/blog">
    
    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />
    
    <!-- Favicon & Theme Color -->
    <meta name="theme-color" content="#000000">
    
    <!-- Schema Markup (Structured Data for a Blog) -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Blog",
      "name": "Pragyantra Blog",
      "url": "https://www.pragyantra.in/blog",
      "description": "{description}",
      "publisher": {
        "@type": "Organization",
        "name": "Pragyantra",
        "logo": {
          "@type": "ImageObject",
          "url": "https://www.pragyantra.in/logo.png"
        }
      },
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "https://www.pragyantra.in/blog"
      }
    }
    </script>

    <!-- Dark Mode Theme Handling -->
    <script is:inline>
      if (
        localStorage.getItem("color-theme") === "dark" ||
        (!("color-theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
  </head>
  
  <body class="min-h-screen bg-gray-50 dark:bg-gray-900 transition-colors duration-200">
    <Header />
    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
</style>
