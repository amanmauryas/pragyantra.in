---
import Layout from '../layouts/Layout.astro';
import FeaturedArticles from '../components/FeaturedArticles.astro';
import CategoryGrid from '../components/CategoryGrid.astro';
import NewsletterCTA from '../components/NewsletterCTA.astro';
import { SEO } from "astro-seo";
const title = "Pragyantra.in - Healthcare Technology & AI Innovation";
const description = "Exploring the intersection of AI, ML, and neuroscience in healthcare technology";
---
<SEO
      title="Pragyantra.in - Healthcare Technology & AI Innovation"
      description="Exploring the intersection of AI, ML, and neuroscience in healthcare technology"
      openGraph={{
        basic: {
          title: "Pragyantra.in - Healthcare Technology & AI Innovation",
          type: "A type.",
          image: "https://user-images.githubusercontent.com/5182256/131216951-8f74f425-f775-463d-a11b-0e01ad9fce8d.png",
        }
      }}
      twitter={{
        creator: "@jonasmerlins1"
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", href: "/favicon.ico" }],
        // extending the default meta tags
        meta: [
          {
            name: "twitter:image",
            content: "https://user-images.githubusercontent.com/5182256/131216951-8f74f425-f775-463d-a11b-0e01ad9fce8d.png",
          },
          { name: "twitter:title", content: "Tinker Tailor Soldier Spy" },
          { name: "twitter:description", content: "Agent" },
        ],
      }}
    />
<Layout title={title} description={description}>
  <section class="relative py-20 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary-600/90 to-primary-800/90"></div>
    <div class="absolute inset-0 bg-[url('/images/hero-pattern.svg')] opacity-10"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-white sm:text-5xl md:text-6xl lg:text-7xl">
          <span class="block">The Future of</span>
          <span class="block text-primary-200">Healthcare Technology</span>
        </h1>
        <p class="mt-6 max-w-lg mx-auto text-xl text-primary-100 sm:max-w-3xl">
          Exploring the intersection of Artificial Intelligence, Machine Learning, and Neuroscience in Healthcare
        </p>
        <div class="mt-10 flex justify-center gap-4">
          <a
            href="#featured"
            class="px-8 py-3 text-lg font-medium text-primary-700 bg-white rounded-lg shadow-md hover:bg-primary-50 transition-colors"
          >
            Read Latest Articles
          </a>
          <a
            href="#categories"
            class="px-8 py-3 text-lg font-medium text-white border-2 border-white rounded-lg hover:bg-white/10 transition-colors"
          >
            Explore Topics
          </a>
        </div>
      </div>
    </div>
  </section>

  <div id="featured">
    <FeaturedArticles />
  </div>
  
  <div id="categories">
    <CategoryGrid />
  </div>
  
  <NewsletterCTA />
</Layout>